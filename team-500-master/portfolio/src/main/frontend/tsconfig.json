{
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES6",
    "noImplicitAny": true,
    "jsx": "react",
    "useDefineForClassFields": true,
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}